<div id="{{ resource_unique_id }}_{{ method.type }}_response">
    {% for response in method.responses %}
        {% if response.headers or response.bodies %}
            <h6 class="pt-3">Responses</h6>
            <div id="{{ resource_unique_id }}_{{ method.type }}_response_{{ response.statusCode }}">
                {% if response.headers %}
                    <ul class="collection with-header">
                        <li class="collection-header"><h5>Headers</h5></li>
                        <li class="collection-item">
                            <ul class="browser-default">
                                {% for item in response.headers %}
                                    {% include theme ~ "/named-parameter.html.twig" %}
                                {% endfor %}
                            </ul>
                        </li>
                    </ul>
                {% endif %}
                {% if response.bodies %}
                    <div class="pb-3">
                        <p class="mb-0"><strong>Body</strong></p>
                        <p><code>Code: {{ response.statusCode }}</code></p>
                        {% for b in response.bodies %}
                            {% if b.examples %}
                                {% for example in b.examples %}
                                    {% set mediaType = b.mediaType|split('+')[1] is defined ? b.mediaType|split('+')[1] : '' %}
                                    <div class="example position-relative">
                                        <p class="mb-0"><strong>{{ mediaType }}</strong></p>
                                        <p class="icon icon--copy-clipboard"><i class="material-icons-outlined">
                                                file_copy
                                            </i>
                                        </p>
                                        <pre><code class="{{ mediaType }}">{{ example }}</code></pre>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        {% endif %}
    {% endfor %}
</div>
