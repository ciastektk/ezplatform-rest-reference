                {#                                        #}{#{% include "./templates/item.nunjucks" %} #}
                {#                                    {% endfor %}#}
                {#                                </ul>#}
                {#                            {% endif %}#}

                {#                            {% for documentation in api.documentationList %}#}
                {#                                <h5>{{ documentation.title }}</h5>#}
                {#                                {{ documentation.content }}#}
                {#                            {% endfor %}#}
                {#                        </div>#}
                {#                    </div>#}
                {#                {% endif %}#}

                <div class="container-fluid">
                    {% for resource in api.resources %}
                        {% set resource_unique_id = uuid() %}
                        <section id="{{ resource.displayName|replace({' ': '_'})|lower }}" class="section">
                            <h2 class="heading pb-2 text-orange">{{ resource.displayName|default(resource.uri) }}</h2>
                            {% include theme ~ "/resource-group.html.twig" %}
                        </section>
                    {% endfor %}

                    {#                    {% if api.types is not empty %}#}
                    {#                        <div class="section">#}
                    {#                            <h5>Types</h5>#}
                    {#                            <ul>#}
                    {#                                {% for type in api.types %}#}
                    {#                                    <li>{% include theme ~ "/type.html.twig" with { type: type} %}</li>#}
                    {#                                {% endfor %}#}
                    {#                            </ul>#}
                    {#                        </div>#}
                    {#                    {% endif %}#}
                </div>
            </div>
        </div>
    </div>
</main>
<footer>
    <div class="container text-center">
        <p class="white-text">Copyright 1999-2020 eZ Systems AS and others.</p>
    </div>
</footer>

