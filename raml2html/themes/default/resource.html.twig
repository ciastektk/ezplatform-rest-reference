<div id="{{ resource_unique_id }}_{{ method.type }}">
    <div class="row px-3 pb-3 border-top">
        <div class="col-lg-6 py-5">
            <h5 id="{{ method.displayName|replace({' ': '_'})|lower }}"  class="heading text-gray">{{ method.displayName}}</h5>
            <p><span class="badge badge--{{ method.type|lower }}">{{ method.type }}: {{ resource.uri }}</span></p>
{#            <p><code>{{ method.type }}: {{ resource.uri }}</code></p>#}
            <p>{{ method.description }}</p>
            {% if method.headers %}
                <div class="py-3">
                    <h6 class="heading text-gray">Header parameters</h6>
                    {% for item in method.headers %}
                        <div class="mb-2">
                            <p><strong>{{ item.key }}</strong></p>
                            <p>{{ item.description }}</p>
                            <div class="table-responsive mb-2">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th scope="col">Property</th>
                                        <th scope="col">Value</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% include theme ~ "/header-parameters.html.twig" %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
            {% if method.queryParameters %}
                <div class="py-3">
                    <h6 class="heading text-gray">Query parameters</h6>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th scope="col">Property</th>
                                <th scope="col">Type</th>
                                <th scope="col">Value</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in method.queryParameters %}
                                {% include theme ~ "/named-parameter.html.twig" %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}
            {% if method.responses %}
                <div class="py-3">
                    <h6 class="heading text-gray">Possible responses</h6>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th scope="col">Code</th>
                                <th scope="col">Description</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for response in method.responses %}
                                <tr>
                                    <td>
                                        <a href="#{{ resource_unique_id }}_{{ method.type }}_response_{{ response.statusCode }}"
                                           {% if loop.first %}class="active"{% endif %}>
                                            {{ response.statusCode }}
                                        </a>
                                    </td>
                                    <td>
                                        <p>{{ response.description }}</p>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="col-lg-6 py-5 example">
            {% set has_request_tab = method.queryParameters or method.headers or method.bodies %}
            {% set has_respose_tab = method.responses is not empty %}
            {% set has_securedby_tab = method.securitySchemes is not empty %}

            {% if has_request_tab %}
