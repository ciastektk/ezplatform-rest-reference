<div id="{{ resource_unique_id }}_{{ method.type }}_request" class="mb-4">
    {% if method.bodies %}
        <h5 class="heading text-gray">Request</h5>
        {% for key, body in method.bodies %}
            <p><strong>Body</strong></p>
            <div class="table-responsive mb-3">
                <table class="table highlight striped">
                    <tbody>
                    <tr>
                        <th>Media type</th>
                        <td>{{ body.mediaType }}</td>
                    </tr>

                    {% if body.description %}
                        <tr>
                            <th>Description</th>
                            <td>{{ body.description }}</td>
                        </tr>
                    {% endif %}

                    {% if body.type %}
                        <tr>
                            <th>Schema</th>
                            <td>
                                {% include theme ~ "/type.html.twig" with {
                                    type: body.type
                                }%}
                            </td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            {% if body.examples %}
                {% for example in body.examples %}
                    <div class="example">
                        {% set mediaTypeFormat = body.mediaType|split('.')|last %}
                        {% set mediaType = mediaTypeFormat ?? '' %}
                        <div class="example position-relative border p-3 mb-3">
                            <p class="mb-0"><strong>{{ mediaType }}</strong></p>
                            <p class="mb-0 icon icon--copy-clipboard"><i class="material-icons-outlined">
                                    file_copy
                                </i>
                            </p>
                            <pre class="border-top"><code class="{{ mediaType }}">{{ example }}</code></pre>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        {% endfor %}
    {% endif %}
</div>
